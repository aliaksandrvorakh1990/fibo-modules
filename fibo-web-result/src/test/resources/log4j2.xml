<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="INFO_LOG_PATTERN">%d{yyyy-MM-dd'T'HH:mm:ssZ} [%-5level] [%t] %logger{36} - %msg%n</Property>
        <Property name="APP_LOG_ROOT">./log</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>${INFO_LOG_PATTERN}</Pattern>
            </PatternLayout>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef level="debug" ref="Console"/>
        </Root>
    </Loggers>
</Configuration>